{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Benchmaker",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "all": false,
        "close": true,
        "minimize": true,
        "maximize": true,
        "unmaximize": true,
        "startDragging": true
      }
    },
    "windows": [
      {
        "title": "Benchmaker",
        "width": 1200,
        "height": 800,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.benchmaker.app",
      "icon": [
        "icons/icon.png",
        "icons/icon.ico",
        "icons/icon.icns"
      ]
    }
  }
}
