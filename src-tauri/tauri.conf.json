{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Benchmaker",
    "version": "0.1.1"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "all": false,
        "close": true,
        "minimize": true,
        "maximize": true,
        "unmaximize": true,
        "startDragging": true
      },
      "http": {
        "all": false,
        "request": true,
        "scope": [
          "https://api.github.com/**",
          "https://github.com/oshtz/Benchmaker/releases/**",
          "https://objects.githubusercontent.com/**"
        ]
      },
      "path": {
        "all": true
      },
      "os": {
        "all": true
      },
      "fs": {
        "all": false,
        "writeFile": true,
        "createDir": true,
        "scope": [
          "$APPLOCALDATA",
          "$APPLOCALDATA/**",
          "$APPLOCALDATA/*"
        ]
      }
    },
    "windows": [
      {
        "title": "Benchmaker",
        "width": 1200,
        "height": 800,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.benchmaker.app",
      "icon": [
        "icons/icon.png",
        "icons/icon.ico",
        "icons/icon.icns"
      ]
    }
  }
}
